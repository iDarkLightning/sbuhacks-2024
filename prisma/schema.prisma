// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  id       String   @id @default(cuid())
  title    String
  content  String
  author   String // The review's author 
  book     Book     @relation(fields: [id], references: [id])
}

model Book {
  id       String   @id @default(cuid())
  isbn     String   @unique
  title    String
  author   String[] // the author of a book
  subjects String[]
  ownedBy  String[]
  reviews  Review[] 
}
